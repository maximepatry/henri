{
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepublish": "node scripts/prepublish.js",
    "pretest": "lerna bootstrap",
    "test:watch": "jest --watch --coverage --colors",
    "test:cover": "jest --coverage",
    "test:precommit": "jest --coverage",
    "test:ci": "jest --coverage --forceExit --runInBand --verbose --bail",
    "coveralls": "nyc --instrument=false --source-map=false report --temp-directory=./coverage --reporter=text-lcov | coveralls",
    "publish-canary": "lerna publish --yes --skip-git --exact -c",
    "packages:audit": "yarn run packages:clean && lerna exec --concurrency 1 -- yarn install --audit --ignore-engines",
    "packages:clean": "lerna clean --yes",
    "packages:install": "lerna exec --concurrency 4 -- yarn install --ignore-engines && yarn install --ignore-engines",
    "packages:upgrade": "yarn upgrade-interactive --latest --ignore-engines && lerna exec --concurrency 1 -- yarn upgrade-interactive --latest --force --ignore-engines",
    "packages:bootstrap": "lerna bootstrap",
    "packages:maintenance": "yarn run packages:clean && yarn run packages:install && yarn run packages:upgrade && yarn run packages:bootstrap && yarn run packages:yalc && exit",
    "packages:yalc": "lerna exec -- yalc push"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.1",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^1.0.1",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/minimist": "^1.2.0",
    "@types/mongoose": "^5.5.17",
    "@types/node": "^12.7.5",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/waterline": "^0.11.4",
    "@types/winston": "^2.4.4",
    "babel-eslint": "^10.0.3",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.3.0",
    "maildev": "^1.1.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "template/.*",
      "pages/.*",
      "node_modules/*",
      "packages/.*/build",
      "packages/.*/build-es5",
      "packages/cli/scripts/test.js",
      "packages/demo",
      "packages/disk",
      "packages/mssql",
      "packages/mysql",
      "packages/postgresql",
      "packages/react",
      "packages/sequelize",
      "packages/websocket",
      "packages/jest-runtime/src/__tests__/test_root.*",
      "website/.*",
      "integration_tests/runtime-internal-module-registry/__mocks__"
    ],
    "collectCoverageFrom": [
      "packages/**/**/*.js",
      "!**/bin/**",
      "!**/cli/**",
      "!**/view/**",
      "!**/perf/**",
      "!**/test/**"
    ]
  },
  "dependencies": {
    "eslint-plugin-react-hooks": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --coverage"
    }
  }
}
